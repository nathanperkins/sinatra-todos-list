<ul id='lists'>
  <% @lists.each_with_index do |list, index| %>
    <li <%= 'class="complete"' if all_completed?(list) %> >
      <a href='/lists/<%= index %>'>
        <h2><%= list[:name] %></h2>
        <p><%= "#{count_completed(list)} / #{list[:todos].size}" %></p>
      </a>
    </li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <a class='add' href='/lists/new'>New List</a>
<% end %>
